    function setLang(lang) {
      const dict = i18n[lang] || i18n.es;

      // Cambia el atributo lang del documento
      document.documentElement.lang = lang;

      // Reemplaza textos por id
      for (const key in dict) {
        const el = document.getElementById(key);
        if (el) el.textContent = dict[key];
      }

      // Guarda preferencia
      localStorage.setItem("winlab_lang", lang);
    }

    // Inicializa (preferencia guardada o idioma del navegador)
    const saved = localStorage.getItem("winlab_lang");
    const browser = (navigator.language || "es").slice(0,2);
    const initial = saved || (i18n[browser] ? browser : "es");

    const select = document.getElementById("langSelect");
    select.value = initial;
    setLang(initial);

    select.addEventListener("change", (e) => setLang(e.target.value));
